<h1>Products</h1>

  

<div class="container">

	<% @products.each do |product| %>
    <br/>
    <table>
      <tr>
        <th>Product Name</th>
        <th>Cost</th>
        <th>Country of origin</th>
        <th>Reviews</th>
      </tr>
      <tr>
        <td> <%= product.name %></td>
        <td> $ <%= product.cost %></td>
        <td><%= product.country %></td>
      </tr>
    </table>
  <% end %>
   
    
  </div>

<hr>

<%= link_to "New Product", new_product_path %>