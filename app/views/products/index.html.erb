<h1>Products</h1>

  

<div class="container">
      <br/>
    <table>
      <tr>
        <th>Product Name</th>
        <th>Cost</th>
        <th>Country of origin</th>
      </tr>

	<% @products.each do |product| %>

      <tr>
        <td> <%= link_to product.name, product_path(product) %></td>
        <td> $ <%= product.cost %></td>
        <td><%= product.country %></td>
      </tr>
   
  <% end %>
   </table>


<h2>USA Products</h2>
<% if @us_made.any? %>
  <% @us_made.each do |product| %>
    <ul>
      <li><%= link_to product.name, product_path(product) %></li>
    </ul>
  <% end %>
<% else %>
  <p>No US product right now!!!</p>
<% end %>

  <br>

<%= link_to "New Product", new_product_path %>

    
  </div>

